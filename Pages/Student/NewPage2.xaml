<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.NewPage2">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <Label Text="Claim Request Form"
                   FontAttributes="Bold"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Label Text="Item to be requested:" FontSize="15"/>
            <Label Text="{Binding Name}" FontSize="15" />

            <StackLayout>
                <Label Text="Student ID:" FontAttributes="Bold" FontSize="18"/>
                <Entry x:Name="StudentIdEntry"
                       IsEnabled="False"
                       Text="{Binding studentId}"  
                    Keyboard="Text"
                       MaxLength="30" />
            </StackLayout>

            <StackLayout>
                <Label Text="Additional Information:"
                       FontAttributes="Bold"
                       FontSize="18"/>
                <Editor x:Name="DescriptionEditor"
                        Placeholder="Enter a description" />
            </StackLayout>

            <Label Text="Note: Request approval is not guaranteed. Please enter as much accurate information as you can."
                   FontSize="15"/>

            <Button Text="Submit Request"
                    FontSize="15"
                    FontAttributes="Bold"
                    Background="#2BA025"
                    Clicked="OnSubmitClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
