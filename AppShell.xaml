<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp3"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiApp3">

	<!-- Hidden pages (not shown in the flyout menu) -->
	<ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"
        FlyoutItemIsVisible="False" />

	<ShellContent
        Title="NewPage1"
        ContentTemplate="{DataTemplate local:NewPage1}"
        Route="NewPage1"
        FlyoutItemIsVisible="False" />

	<ShellContent
        Title="NewPage2"
        ContentTemplate="{DataTemplate local:NewPage2}"
        Route="NewPage2"
        FlyoutItemIsVisible="False" />

	<!-- Student Pages (visible in flyout for students) -->
	<ShellContent
        Title="Home"
        Icon="images.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

	<ShellContent
        Title="My Items"
        Icon="list.png"
        ContentTemplate="{DataTemplate local:MyItems}"
        Route="MyItems" />

	<!-- Staff Pages (visible in flyout for staff) -->
	<ShellContent
        Title="Staff Dashboard"
        Icon="list.png"
        ContentTemplate="{DataTemplate local:StaffPage}"
        Route="StaffPage"
        FlyoutItemIsVisible="False" />

	<!-- Flyout Footer for logout -->
	<Shell.FlyoutFooter>
		<VerticalStackLayout Padding="20">
			<Button
                Text="Logout"
                BackgroundColor="#FF3B30"
                TextColor="White"
                Clicked="OnLogoutClicked"
                CornerRadius="8" />
		</VerticalStackLayout>
	</Shell.FlyoutFooter>

</Shell>