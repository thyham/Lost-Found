<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp3"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp3">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"
        FlyoutItemIsVisible="False" />

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage"
        FlyoutItemIsVisible="False" />

    <ShellContent
        Title="NewPage1"
        ContentTemplate="{DataTemplate local:NewPage1}"
        Route="NewPage1"
        FlyoutItemIsVisible="False" />

    <ShellContent
        Title="NewPage2"
        ContentTemplate="{DataTemplate local:NewPage2}"
        Route="NewPage2"
        FlyoutItemIsVisible="False" />

    <ShellContent
        x:Name="HomeShellContent"
        Title="Home"
        Icon="images.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        FlyoutItemIsVisible="False" />

    <ShellContent
        x:Name="MyItemsShellContent"
        Title="My Items"
        Icon="list.png"
        ContentTemplate="{DataTemplate local:MyItems}"
        Route="MyItems"
        FlyoutItemIsVisible="False" />

    <ShellContent
        x:Name="StaffPageShellContent"
        Title="Staff Dashboard"
        Icon="list.png"
        ContentTemplate="{DataTemplate local:StaffPage}"
        Route="StaffPage"
        FlyoutItemIsVisible="False" />

    <Shell.FlyoutFooter>
        <VerticalStackLayout Padding="20">
            <Button
                Text="Logout"
                BackgroundColor="#FF3B30"
                TextColor="White"
                Clicked="OnLogoutClicked"
                CornerRadius="8" />
        </VerticalStackLayout>
    </Shell.FlyoutFooter>

</Shell>