<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.NewPage1">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="{Binding Name}"
                   FontAttributes="Bold"
                   FontSize="28"
                   HorizontalOptions="Center"
                   Margin="0,10" />

            <Border Stroke="#E0E0E0" 
                    StrokeThickness="2" 
                    HeightRequest="250"
                    BackgroundColor="#F5F5F5"
                    Margin="0,0,0,15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <Grid>
                    <Label x:Name="NoImageLabel"
                           Text="No Image Available"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Gray"
                           FontSize="16"/>
                    <Image x:Name="ItemImageDisplay"
                           Aspect="AspectFill"/>
                </Grid>
            </Border>

            <Border Stroke="#E0E0E0" 
                    StrokeThickness="2" 
                    Padding="20" 
                    BackgroundColor="White">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">

                    <StackLayout>
                        <Label Text="Date Found:" 
                               FontAttributes="Bold" 
                               FontSize="18"/>
                        <Label Text="{Binding Date}" 
                               FontSize="16" 
                               TextColor="DarkSlateGray"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Category:" 
                               FontAttributes="Bold" 
                               FontSize="18"/>
                        <Label Text="{Binding Category}" 
                               FontSize="16" 
                               TextColor="DarkSlateGray"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Location Found:" 
                               FontAttributes="Bold" 
                               FontSize="18"/>
                        <Label Text="{Binding Location}" 
                               FontSize="16" 
                               TextColor="DarkSlateGray"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Description:" 
                               FontAttributes="Bold" 
                               FontSize="18"/>
                        <Label Text="{Binding Notes}" 
                               FontSize="16" 
                               TextColor="DarkSlateGray"/>
                    </StackLayout>

                </VerticalStackLayout>
            </Border>

            <Button x:Name="RequestClaimButton"
                    Text="Request Claim"
                    FontSize="15"
                    FontAttributes="Bold"
                    BackgroundColor="#2BA025"
                    Clicked="OnGoToRequestClicked" />

            <Label x:Name="AlreadyRequestedLabel"
                   Text="You have already submitted a request for this item"
                   TextColor="Red"
                   FontSize="14"
                   IsVisible="False"
                   HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>