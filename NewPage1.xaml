<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.NewPage1"
             Title="Item Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Item Details"
                   FontAttributes="Bold"
                   FontSize="28"
                   HorizontalOptions="Center"
                   Margin="0,10" />

            <StackLayout>
                <Label Text="Name:" 
                       FontAttributes="Bold" 
                       FontSize="18"/>
                <Label Text="{Binding Name}" 
                       FontSize="16" 
                       TextColor="DarkSlateGray"/>
            </StackLayout>
            
            <StackLayout>
                <Label Text="Date:" 
                       FontAttributes="Bold" 
                       FontSize="18"/>
                <Label Text="{Binding Date}" 
                       FontSize="16" 
                       TextColor="DarkSlateGray"/>
            </StackLayout>


            <StackLayout>
                <Label Text="Category:" 
                       FontAttributes="Bold" 
                       FontSize="18"/>
                <Label Text="{Binding Category}" 
                       FontSize="16" 
                       TextColor="DarkSlateGray"/>
            </StackLayout>


            <StackLayout>
                <Label Text="Notes:" 
                       FontAttributes="Bold" 
                       FontSize="18"/>
                <Label Text="{Binding Notes}" 
                       FontSize="16" 
                       TextColor="DarkSlateGray"/>
            </StackLayout>


            <StackLayout>
                <Label Text="Location:" 
                       FontAttributes="Bold" 
                       FontSize="18"/>
                <Label Text="{Binding Location}" 
                       FontSize="16" 
                       TextColor="DarkSlateGray"/>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
