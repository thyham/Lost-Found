<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MyItems"
             Title="MyItems">

    <Grid RowDefinitions="Auto, *"
          Padding="30,0"
          RowSpacing="20">

        <VerticalStackLayout Grid.Row="0" Spacing="20">

            <Label Text="My Claim Requests"
                   FontAttributes="Bold"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Label Text="Filter by:"
                   FontSize="12"
                   FontAttributes="Bold"/>

            <HorizontalStackLayout Spacing="5">
               <Button x:Name="AllFormsTabButton"
                    Text="All"
                    FontSize="12"
                    BackgroundColor="#007BFF"
                    FontAttributes="Bold"
                    Clicked="OnAllFormsTabClicked" />
                

                <Button x:Name="PendingFormsTabButton"
                    Text="Pending"
                    FontSize="12"
                    BackgroundColor="#6C757D"
                    FontAttributes="Bold"
                    Clicked="OnPendingFormsTabClicked" />

                <Button x:Name="ApprovedFormsTabButton"
                    Text="Approved"
                    FontSize="12"
                    BackgroundColor="#6C757D"
                    FontAttributes="Bold"
                    Clicked="OnApprovedFormsTabClicked" />

                <Button x:Name="RejectedFormsTabButton"
                    Text="Rejected"
                    FontSize="12"
                    BackgroundColor="#6C757D"
                    FontAttributes="Bold"
                    Clicked="OnRejectedFormsTabClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>

        <Border Grid.Row="1"
                Stroke="White"
                StrokeShape="RoundRectangle 10"
                Padding="10"
                Margin="5">

            <CollectionView x:Name="FormsList" ItemsSource="{Binding FormsCollection}">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="White"
                                StrokeShape="RoundRectangle 10"
                                Padding="10"
                                Margin="5"
                                BackgroundColor="White">

                            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">

                                <Label Text="{Binding itemName}" 
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       HorizontalOptions="Center" />

                                <Label Text="{Binding Notes}" 
                                       FontSize="12"
                                       HorizontalOptions="Center" />

                                <Label Text="{Binding Status}" 
                                       FontAttributes="Bold"
                                       FontSize="14"
                                       HorizontalOptions="Center">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Pending">
                                            <Setter Property="TextColor" Value="#FFC107"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Approved">
                                            <Setter Property="TextColor" Value="#28A745"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Rejected">
                                            <Setter Property="TextColor" Value="#DC3545"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>

                                <Button Text="View Details"
                                        FontSize="12"
                                        BackgroundColor="#007AFF"
                                        Clicked="OnViewRequestDetailsClicked"/>

                            </VerticalStackLayout>

                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Border>
    </Grid>
</ContentPage>