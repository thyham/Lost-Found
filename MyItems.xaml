<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MyItems"
             BackgroundColor="#F4F4F4"
             Title="My Items">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="My Claim Requests"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#333"/>

            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="15"
                   HasShadow="True">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Filter by Status"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#333"/>

                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Button x:Name="AllFormsTabButton"
                                Text="All"
                                FontSize="12"
                                CornerRadius="20"
                                TextColor="White"
                                BackgroundColor="#007BFF"
                                Padding="10,5"
                                Clicked="OnAllFormsTabClicked"/>

                        <Button x:Name="PendingFormsTabButton"
                                Text="Pending"
                                FontSize="12"
                                CornerRadius="20"
                                TextColor="White"
                                BackgroundColor="#6C757D"
                                Padding="10,5"
                                Clicked="OnPendingFormsTabClicked"/>

                        <Button x:Name="ApprovedFormsTabButton"
                                Text="Approved"
                                FontSize="12"
                                CornerRadius="20"
                                TextColor="White"
                                BackgroundColor="#6C757D"
                                Padding="10,5"
                                Clicked="OnApprovedFormsTabClicked"/>

                        <Button x:Name="RejectedFormsTabButton"
                                Text="Rejected"
                                FontSize="12"
                                CornerRadius="20"
                                TextColor="White"
                                BackgroundColor="#6C757D"
                                Padding="10,5"
                                Clicked="OnRejectedFormsTabClicked"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <CollectionView x:Name="FormsList"
                            ItemsSource="{Binding FormsCollection}"
                            EmptyView="No claim requests found.">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="1"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5"
                               Padding="15"
                               CornerRadius="15"
                               BackgroundColor="White"
                               HasShadow="True">

                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding itemName}"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="#333"/>

                                <Label Text="{Binding Notes}"
                                       FontSize="13"
                                       TextColor="#666"/>

                                <Label Text="{Binding Status}"
                                       FontAttributes="Bold"
                                       FontSize="14"
                                       HorizontalOptions="Start">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Pending">
                                            <Setter Property="TextColor" Value="#FFC107"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Approved">
                                            <Setter Property="TextColor" Value="#28A745"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Rejected">
                                            <Setter Property="TextColor" Value="#DC3545"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>

                                <Button Text="View Details"
                                        FontSize="13"
                                        CornerRadius="10"
                                        BackgroundColor="#007AFF"
                                        TextColor="White"
                                        Padding="10,5"
                                        Clicked="OnViewRequestDetailsClicked"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
