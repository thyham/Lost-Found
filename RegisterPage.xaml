<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.RegisterPage"
             Title="Create Account">

    <ScrollView>
        <VerticalStackLayout 
            Spacing="20" 
            Padding="30"
            VerticalOptions="Center">

            <Label 
                Text="Create New Account"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,0,0,20"/>

            <Border
                Stroke="#E0E0E0"
                StrokeThickness="1"
                Background="White"
                Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                <Entry 
                    x:Name="UsernameEntry"
                    Placeholder="Username"
                    PlaceholderColor="Gray"
                    TextColor="Black"/>
            </Border>

            <Border
                Stroke="#E0E0E0"
                StrokeThickness="1"
                Background="White"
                Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                <Entry 
                    x:Name="EmailEntry"
                    Placeholder="Email"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    Keyboard="Email"/>
            </Border>

            <Border
                Stroke="#E0E0E0"
                StrokeThickness="1"
                Background="White"
                Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                <Entry 
                    x:Name="PasswordEntry"
                    Placeholder="Password"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    IsPassword="True"/>
            </Border>

            <Border
                Stroke="#E0E0E0"
                StrokeThickness="1"
                Background="White"
                Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                <Entry 
                    x:Name="ConfirmPasswordEntry"
                    Placeholder="Confirm Password"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    IsPassword="True"/>
            </Border>

			<StackLayout>
				<Label Text="Account Type:" FontAttributes="Bold" FontSize="16"/>
				<Border
                    Stroke="#E0E0E0"
                    StrokeThickness="1"
                    Background="White"
                    Padding="10">
					<Border.StrokeShape>
						<RoundRectangle CornerRadius="8"/>
					</Border.StrokeShape>
					<Picker x:Name="RolePicker" SelectedIndex="0">
						<Picker.ItemsSource>
							<x:Array Type="{x:Type x:String}">
								<x:String>Student</x:String>
								<x:String>Staff</x:String>
							</x:Array>
						</Picker.ItemsSource>
					</Picker>
				</Border>
			</StackLayout>

            <Label 
                x:Name="MessageLabel"
                Text=""
                TextColor="Red"
                FontSize="14"
                IsVisible="False"
                HorizontalOptions="Center"/>

            <Button 
                x:Name="RegisterButton"
                Text="Register"
                BackgroundColor="#007AFF"
                TextColor="White"
                FontAttributes="Bold"
                HeightRequest="50"
                CornerRadius="8"
                Clicked="OnRegisterClicked"
                Margin="0,10,0,0"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>