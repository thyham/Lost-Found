<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.StaffPage"
             Title="Staff Dashboard">

    <Grid RowDefinitions="Auto, *" Padding="20" RowSpacing="15">

        <HorizontalStackLayout Grid.Row="0" Spacing="10" HorizontalOptions="Center">
            <Button x:Name="ItemsTabButton"
                    Text="Lost Items"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#007AFF"
                    Clicked="OnItemsTabClicked"
                    WidthRequest="150"/>
            <Button x:Name="RequestsTabButton"
                    Text="Requests"
                    FontSize="16"
                    BackgroundColor="#6C757D"
                    Clicked="OnRequestsTabClicked"
                    WidthRequest="150"/>
        </HorizontalStackLayout>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15">
                <VerticalStackLayout x:Name="ItemsSection" IsVisible="True" Spacing="15">

                    <HorizontalStackLayout HorizontalOptions="End">
                        <Button Text="+ Add New Item"
                                FontSize="14"
                                FontAttributes="Bold"
                                BackgroundColor="#28A745"
                                Clicked="OnAddItemClicked"/>
                    </HorizontalStackLayout>

                    <Label Text="Lost Items Collection"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <CollectionView x:Name="ItemsCollectionView"
                                    ItemsSource="{Binding ItemsCollection}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="#E0E0E0"
                                        StrokeThickness="2"
                                        BackgroundColor="White"
                                        Padding="15"
                                        Margin="5">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10"/>
                                    </Border.StrokeShape>

                                    <Grid ColumnDefinitions="100, *" RowDefinitions="Auto, Auto, Auto, Auto" ColumnSpacing="10">

                                        <Image Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"
                                               Source="{Binding ImagePath}"
                                               Aspect="AspectFill"
                                               HeightRequest="80"
                                               WidthRequest="80">
                                            <Image.Clip>
                                                <RoundRectangleGeometry CornerRadius="8" Rect="0,0,80,80"/>
                                            </Image.Clip>
                                        </Image>

                                        <Label Grid.Row="0" Grid.Column="1"
                                               Text="{Binding Name}"
                                               FontSize="18"
                                               FontAttributes="Bold"/>

                                        <Label Grid.Row="1" Grid.Column="1"
                                               Text="{Binding Category}"
                                               TextColor="Gray"
                                               FontSize="14"/>

                                        <Label Grid.Row="2" Grid.Column="1"
                                               Text="{Binding Location}"
                                               FontSize="12"
                                               TextColor="DarkSlateGray"/>

                                        <HorizontalStackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                                             Spacing="10" Margin="0,10,0,0">
                                            <Button Text="View Details"
                                                    FontSize="12"
                                                    BackgroundColor="#007AFF"
                                                    Clicked="OnViewItemDetailsClicked"/>
                                            <Button Text="Delete"
                                                    FontSize="12"
                                                    BackgroundColor="#DC3545"
                                                    Clicked="OnDeleteItemClicked"/>
                                        </HorizontalStackLayout>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <VerticalStackLayout x:Name="RequestsSection" IsVisible="False" Spacing="15">

                    <Label Text="Claim Requests"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Button x:Name="AllRequestsButton"
                                Text="All"
                                FontSize="14"
                                BackgroundColor="#007AFF"
                                WidthRequest="80"
                                Clicked="OnAllRequestsClicked"/>
                        <Button x:Name="PendingRequestsButton"
                                Text="Pending"
                                FontSize="14"
                                BackgroundColor="#6C757D"
                                WidthRequest="100"
                                Clicked="OnPendingRequestsClicked"/>
                        <Button x:Name="AcceptedRequestsButton"
                                Text="Accepted"
                                FontSize="14"
                                BackgroundColor="#6C757D"
                                WidthRequest="100"
                                Clicked="OnAcceptedRequestsClicked"/>
                        <Button x:Name="RejectedRequestsButton"
                                Text="Rejected"
                                FontSize="14"
                                BackgroundColor="#6C757D"
                                WidthRequest="100"
                                Clicked="OnRejectedRequestsClicked"/>
                    </HorizontalStackLayout>

                    <Label x:Name="NoRequestsLabel"
                           Text="No pending requests"
                           FontSize="16"
                           TextColor="Gray"
                           HorizontalOptions="Center"
                           Margin="0,40,0,0"
                           IsVisible="False"/>

                    <CollectionView x:Name="RequestsCollectionView"
                                    ItemsSource="{Binding RequestedForms}">
                        <CollectionView.EmptyView>
                            <ContentView>
                                <Label Text="No requests found"
                                       FontSize="16"
                                       TextColor="Gray"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Margin="0,40,0,0"/>
                            </ContentView>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border StrokeThickness="2"
                                        BackgroundColor="White"
                                        Padding="15"
                                        Margin="5">
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border" Binding="{Binding Status}" Value="Pending">
                                            <Setter Property="Stroke" Value="#FFC107"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Border" Binding="{Binding Status}" Value="Approved">
                                            <Setter Property="Stroke" Value="#28A745"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Border" Binding="{Binding Status}" Value="Rejected">
                                            <Setter Property="Stroke" Value="#DC3545"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10"/>
                                    </Border.StrokeShape>

                                    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto">

                                        <Label Grid.Row="0"
                                               Text="{Binding itemName}"
                                               FontSize="18"
                                               FontAttributes="Bold"/>

                                        <Label Grid.Row="1"
                                               Text="{Binding studentId, StringFormat='Student ID: {0}'}"
                                               FontSize="14"
                                               TextColor="Gray"/>

                                        <Label Grid.Row="2"
                                               Text="{Binding Notes, StringFormat='Notes: {0}'}"
                                               FontSize="12"
                                               TextColor="DarkSlateGray"
                                               Margin="0,5,0,0"/>

                                        <Label Grid.Row="3"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               Margin="0,5,0,0">
                                            <Label.Text>
                                                <Binding Path="Status" StringFormat="Status: {0}"/>
                                            </Label.Text>
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Pending">
                                                    <Setter Property="TextColor" Value="#FFC107"/>
                                                </DataTrigger>
                                                <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Approved">
                                                    <Setter Property="TextColor" Value="#28A745"/>
                                                </DataTrigger>
                                                <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Rejected">
                                                    <Setter Property="TextColor" Value="#DC3545"/>
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>

                                        <HorizontalStackLayout Grid.Row="4" 
                                                             Spacing="10" 
                                                             Margin="0,10,0,0">
                                            <Button Text="View Details"
                                                    FontSize="12"
                                                    BackgroundColor="#007AFF"
                                                    Clicked="OnViewRequestDetailsClicked"/>
                                            <Button Text="Accept"
                                                    FontSize="12"
                                                    BackgroundColor="#28A745"
                                                    Clicked="OnAcceptRequestClicked">
                                                <Button.Triggers>
                                                    <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Approved">
                                                        <Setter Property="IsVisible" Value="False"/>
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Rejected">
                                                        <Setter Property="IsVisible" Value="False"/>
                                                    </DataTrigger>
                                                </Button.Triggers>
                                            </Button>
                                            <Button Text="Reject"
                                                    FontSize="12"
                                                    BackgroundColor="#DC3545"
                                                    Clicked="OnRejectRequestClicked">
                                                <Button.Triggers>
                                                    <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Approved">
                                                        <Setter Property="IsVisible" Value="False"/>
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Button" Binding="{Binding Status}" Value="Rejected">
                                                        <Setter Property="IsVisible" Value="False"/>
                                                    </DataTrigger>
                                                </Button.Triggers>
                                            </Button>
                                        </HorizontalStackLayout>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>