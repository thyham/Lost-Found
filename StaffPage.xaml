<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.StaffPage"
             Title="Staff Dashboard">

    <Grid RowDefinitions="Auto, *" Padding="20" RowSpacing="15">

        <!-- Header with Tab Buttons -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10" HorizontalOptions="Center">
            <Button x:Name="ItemsTabButton"
                    Text="Lost Items"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="#007AFF"
                    Clicked="OnItemsTabClicked"
                    WidthRequest="150"/>
            <Button x:Name="RequestsTabButton"
                    Text="Pending Requests"
                    FontSize="16"
                    BackgroundColor="#6C757D"
                    Clicked="OnRequestsTabClicked"
                    WidthRequest="180"/>
        </HorizontalStackLayout>

        <!-- Content Area -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15">

                <!-- Lost Items Section (visible when Items tab is active) -->
                <VerticalStackLayout x:Name="ItemsSection" IsVisible="True" Spacing="15">

                    <HorizontalStackLayout HorizontalOptions="End">
                        <Button Text="+ Add New Item"
                                FontSize="14"
                                FontAttributes="Bold"
                                BackgroundColor="#28A745"
                                Clicked="OnAddItemClicked"/>
                    </HorizontalStackLayout>

                    <Label Text="Lost Items Collection"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <CollectionView x:Name="ItemsCollectionView"
                                    ItemsSource="{Binding ItemsCollection}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="#E0E0E0"
                                        StrokeThickness="2"
                                        BackgroundColor="White"
                                        Padding="15"
                                        Margin="5">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10"/>
                                    </Border.StrokeShape>

                                    <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto, Auto">

                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Name}"
                                               FontSize="18"
                                               FontAttributes="Bold"/>

                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="{Binding Category}"
                                               TextColor="Gray"
                                               FontSize="14"/>

                                        <Label Grid.Row="2" Grid.Column="0"
                                               Text="{Binding Location}"
                                               FontSize="12"
                                               TextColor="DarkSlateGray"/>

                                        <HorizontalStackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                                             Spacing="10" Margin="0,10,0,0">
                                            <Button Text="View Details"
                                                    FontSize="12"
                                                    BackgroundColor="#007AFF"
                                                    Clicked="OnViewItemDetailsClicked"/>
                                            <Button Text="Delete"
                                                    FontSize="12"
                                                    BackgroundColor="#DC3545"
                                                    Clicked="OnDeleteItemClicked"/>
                                        </HorizontalStackLayout>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- Pending Requests Section (visible when Requests tab is active) -->
                <VerticalStackLayout x:Name="RequestsSection" IsVisible="False" Spacing="15">

                    <Label Text="Pending Claim Requests"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <CollectionView x:Name="RequestsCollectionView"
                                    ItemsSource="{Binding RequestedForms}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="#FFC107"
                                        StrokeThickness="2"
                                        BackgroundColor="White"
                                        Padding="15"
                                        Margin="5">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10"/>
                                    </Border.StrokeShape>

                                    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto">

                                        <Label Grid.Row="0"
                                               Text="{Binding itemName}"
                                               FontSize="18"
                                               FontAttributes="Bold"/>

                                        <Label Grid.Row="1"
                                               Text="{Binding studentId, StringFormat='Student ID: {0}'}"
                                               FontSize="14"
                                               TextColor="Gray"/>

                                        <Label Grid.Row="2"
                                               Text="{Binding Notes, StringFormat='Notes: {0}'}"
                                               FontSize="12"
                                               TextColor="DarkSlateGray"
                                               Margin="0,5,0,0"/>

                                        <Label Grid.Row="3"
                                               Text="{Binding Status}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="#FFC107"
                                               Margin="0,5,0,0"/>

                                        <HorizontalStackLayout Grid.Row="4" 
                                                             Spacing="10" 
                                                             Margin="0,10,0,0">
                                            <Button Text="View Details"
                                                    FontSize="12"
                                                    BackgroundColor="#007AFF"
                                                    Clicked="OnViewRequestDetailsClicked"/>
                                            <Button Text="Accept"
                                                    FontSize="12"
                                                    BackgroundColor="#28A745"
                                                    Clicked="OnAcceptRequestClicked"/>
                                            <Button Text="Reject"
                                                    FontSize="12"
                                                    BackgroundColor="#DC3545"
                                                    Clicked="OnRejectRequestClicked"/>
                                        </HorizontalStackLayout>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>