<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MainPage"
             Title="Lost and Found">

    <Grid RowDefinitions="Auto, *" Padding="20" RowSpacing="15">

        <VerticalStackLayout Grid.Row="0" Spacing="15" HorizontalOptions="Center">

            <Label Text="Lost Items"
                   FontAttributes="Bold"
                   FontSize="24"
                   HorizontalOptions="Center"/>

            <SearchBar Placeholder="Search items..."
                       Text="{Binding SearchQuery}"
                       BackgroundColor="#F0F0F0"
                       PlaceholderColor="Gray"
                       TextColor="Black"
                       HeightRequest="40"
                       WidthRequest="300"
                       Margin="0,5,0,0"/>
        </VerticalStackLayout>


        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="10" Padding="0,10,0,10">

                <Label Text="Available Lost Items"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,10,0,10"/>

                <CollectionView ItemsSource="{Binding FilteredItems}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="2" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.EmptyView>
                        <ContentView>
                            <Label Text="No items found"
                                   FontSize="16"
                                   TextColor="Gray"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Margin="0,40,0,0"/>
                        </ContentView>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="#E0E0E0"
                                    StrokeThickness="2"
                                    BackgroundColor="White"
                                    Padding="15"
                                    Margin="8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>

                                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">

                                    <Border Stroke="#E0E0E0"
                                            StrokeThickness="1"
                                            HeightRequest="100"
                                            WidthRequest="120"
                                            BackgroundColor="#F5F5F5">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8"/>
                                        </Border.StrokeShape>

                                        <Image Source="{Binding ImagePath}"
                                               Aspect="AspectFill">
                                            <Image.Triggers>
                                                <DataTrigger TargetType="Image" 
                                                             Binding="{Binding ImagePath}" 
                                                             Value="{x:Null}">
                                                    <Setter Property="IsVisible" Value="False"/>
                                                </DataTrigger>
                                            </Image.Triggers>
                                        </Image>
                                    </Border>

                                    <Label Text="{Binding Name}" 
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           HorizontalOptions="Center"/>

                                    <Label Text="{Binding Category}" 
                                           FontSize="13"
                                           TextColor="Gray"
                                           HorizontalOptions="Center"/>

                                    <Label Text="{Binding Location}" 
                                           FontSize="12"
                                           TextColor="DarkSlateGray"
                                           HorizontalOptions="Center"/>

                                    <Button Text="View Details"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            BackgroundColor="#007AFF"
                                            TextColor="White"
                                            CornerRadius="8"
                                            WidthRequest="120"
                                            Clicked="OnGoToDetailsClicked"/>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
