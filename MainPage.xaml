<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MainPage">

    <Grid RowDefinitions="Auto, *"
          Padding="30,0"
          RowSpacing="20">

        <!-- Static Header Section -->
        <VerticalStackLayout Grid.Row="0" Spacing="20">

            <Image Source="dotnet_bot.png"
                   HeightRequest="185"
                   Aspect="AspectFit"
                   SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <HorizontalStackLayout>
                <Button x:Name="CounterBtn"
                        Text="Click me" 
                        Clicked="OnCounterClicked"
                        HorizontalOptions="Fill" />

                <Button x:Name="CounterBtn1"
                        Text="Other Page" 
                        HorizontalOptions="Fill" />
            </HorizontalStackLayout>

            <Label Text="Item Collection"
                   FontSize="24"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Scrollable Collection Section -->
        <Border Grid.Row="1"
                Stroke="Gray"
                StrokeShape="RoundRectangle 10"
                Padding="10"
                Margin="5">

            <CollectionView ItemsSource="{Binding ItemsCollection}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="LightGray" 
                                StrokeShape="RoundRectangle 10"
                                Padding="10"
                                Margin="5">

                            <Grid ColumnDefinitions="*,Auto">
                                <!-- Left side: Item details -->
                                <VerticalStackLayout Grid.Column="0" Spacing="3">
                                    <Label Text="{Binding Name}" FontAttributes="Bold"/>
                                    <Label Text="{Binding Date}" />
                                    <Label Text="{Binding Category}" />
                                    <Label Text="{Binding Notes}" />
                                    <Label Text="{Binding Location}" />
                                </VerticalStackLayout>

                                <!-- Right side: Buttons -->
                                <VerticalStackLayout Grid.Column="1"
                                                     Spacing="5"
                                                     HorizontalOptions="End">
                                    <Button Text="View Item"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            Clicked="OnGoToDetailsClicked" />

                                    <Button Text="Request Claim"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            Background="#2BA025"
                                            Clicked="MyButtonClicked" />
                                </VerticalStackLayout>
                            </Grid>

                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>
    </Grid>
</ContentPage>
